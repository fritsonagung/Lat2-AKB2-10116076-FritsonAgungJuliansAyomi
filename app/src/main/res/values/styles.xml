<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:radioButtonStyle">@style/RadioStateChecker</item>
        <item name="android:checkboxStyle">@style/CheckboxStateChecker</item>
    </style>

    <style name="RadioStateChecker" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="buttonTint">@drawable/custom_stated_cheked</item>
    </style>

    <style name="CheckboxStateChecker" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="buttonTint">@drawable/custom_stated_cheked</item>
    </style>
</resources>
